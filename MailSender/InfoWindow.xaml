<Window x:Class="WpfMailSender.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Height="200" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="InfoMessage" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Height="130" Width="280" BorderBrush="Gray" FontSize="18" Text="{Binding Mode=OneWay}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="SemiBold"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Right">
            <Button Height="20" Width="100" Click="Button_Click">
                <TextBlock Text="OK" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>

    </Grid>
</Window>
